<% layout('/layout/boilerplate') -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2 mt-3">


                <h1>
                    <%= list.title%>
                </h1>

            </div>
            <div class="card col-6 offset-2">
                <img src="<%= list.image.url %>" class="card-img-top show_img" alt="listingimage">
                <div class="card-body">
                    <p class="card-text">

                        <br>
                        <%= list.description %><br>
                            &#8360; <%= list.price.toLocaleString("en-IN") %><br>
                                <%= list.location %><br>
                                    <%= list.country %>
                    </p>
                </div>
            </div>


            </form>


        </div>
        <div class="btns">
            <a href="/listings/<%= list._id%>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>
            <form method="POST" action="/listings/<%= list._id%>?_method=DELETE">
                <button class="btn btn-dark offset-4">Delete</button>

        </div>
   <div class="col-8 offset-2 mt-3 mb-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= list._id%>/reviews" method="POST">
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]"class="form-range">
        </div>
        <div  class="mb-3 mt-3" >
            <label for="comment" class="form-label">Comments
         <textarea class="form-control" name="review[comment]" id="comment" cols="120" rows="5"></textarea>
            </label>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      
    </form>
   </div>

